{% extends 'base.html.twig' %}

{% block title %}Sign up{% endblock %}

{% block body %}
    <form method="post">
        <div class="d-flex justify-content-center">
            <div class="mt-3">
                <h1 class="h3 mb-3 font-weight-normal">Please register</h1>

                <div class="form-group mb-2">
                    <label class="mr-2" for="inputUsername">Username</label>
                    <input type="text" name="username" id="inputUsername" class="form-control" placeholder="Enter username.." required="required" autofocus="autofocus">
                </div>
                <div class="form-group">
                    <label class="mr-2" for="inputPassword">Password</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" placeholder="Enter password.." required="required">
                </div>

                <button class="btn btn-block btn-outline-primary mt-3" type="submit">
                    Sign up
                </button>
            </div>
        </div>
    </form>
{% endblock %}